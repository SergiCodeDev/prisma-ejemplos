model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  lastname String?
  posts Post[]
}

model Post {
  id Int @id @default(autoincrement())
  title String @unique
  content String?
  authorId Int
  author User @relation(fields: [authorId], references: [id])
}